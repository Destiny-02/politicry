{
    "action": {},
    "background": {
        "service_worker": "background.js"
    },
    "content_scripts": [
        {
            "css": [
                "reddit.css"
            ],
            "js": [
                "reddit.js"
            ],
            "matches": [
                "https://www.reddit.com/*",
                "https://www.imgur.com/*"
            ]
        }
    ],
    "description": "A tool to remove political posts from popular social media platforms.",
    "manifest_version": 3,
    "name": "Politicry",
    "icons":{
        "16":"/images/logo-16.png",
        "48":"/images/logo-48.png",
        "128":"/images/logo-128.png"
    },
    "page_action":{
        "default_icon":{
            "16":"/images/logo-16.png",
            "48":"/images/logo-48.png",
            "128":"/images/logo-128.png"
        }
    },
    "permissions": [
        "activeTab",
        "scripting"
    ],
    "version": "1.0"
    
}
