{
    "action": {
        "default_popup": "popup.html"
    },
    "background": {
        "service_worker": "background.js"
    },
    "description": "A tool to remove political posts from popular social media platforms.",
    "manifest_version": 3,
    "name": "Politicry",
    "permissions": [
        "activeTab",
        "scripting"
    ],
    "version": "1.0",
    "content_scripts": [
        {
          "matches": ["https://www.reddit.com/*", "https://www.imgur.com/*"],
          "js": ["reddit.js"],
          "css": ["reddit.css"]
        }
      ]
}
